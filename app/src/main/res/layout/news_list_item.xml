<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="4"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        tools:text="Florida woman dies from flesheating bacteria after visiting popular Manatee County beach - ABC Action News" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:textSize="18sp"
        tools:text="A Florida woman who contracted a flesh eating bacteria in the Gulf of Mexico in Manatee County died just a week and a half after her injury." />

    <LinearLayout
        android:id="@+id/author_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            tools:text="BBC" />
        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:textSize="16dp"
            tools:text="David Montanaro" />
    </LinearLayout>
</LinearLayout>